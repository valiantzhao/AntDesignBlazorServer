@using AbpAntDesignDemo.Localization
@using Volo.Abp.AspNetCore.Components.Web
@using AbpAntDesignDemo.Authors
@inherits FeedbackComponent<CreateAuthorDto>
<Form Layout="@FormLayout.Horizontal"
      OnFinish="OnFinish"
      OnFinishFailed="OnFinishFailed"
      LabelCol="new ColLayoutParam { Span = 8 }"
      WrapperCol="new ColLayoutParam { Span = 16 }"
      Model="@_model">
    <ChildContent>
        
        <Row Gutter="16">
            <AntDesign.Col Span="12">
                <Space>
                    <FormItem Label="Name" Style="width: 200px">
                        <Input style="width:200px" @bind-Value="@context.Name" />
                    </FormItem>
                </Space>
            </AntDesign.Col>
            <AntDesign.Col Span="12">
                <Space>
                    <FormItem Label="ShortBio" Style="width: 200px">
                        <Input style="width:200px" @bind-Value="@context.ShortBio" />
                    </FormItem>
                </Space>
            </AntDesign.Col>
             <AntDesign.Col Span="12">
                            <Space>
                                <FormItem Label="BirthDate" Style="width: 200px">
                                    <DatePicker TValue="DateTime" Picker="@DatePickerType.Date" @bind-Value="@context.BirthDate" />
                                </FormItem>
                            </Space>
                        </AntDesign.Col>
        </Row>
        <Row Gutter="16">
            <AntDesign.Col>
                <FormItem>
                    <Button Type="@ButtonType.Primary" HtmlType="submit">
                        保存
                    </Button>
                </FormItem>
            </AntDesign.Col>
        </Row>
    </ChildContent>
</Form>